@page
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Baking Classes</title>
    <link rel="icon" href="~/favicon.ico" type="image/x-icon"> @* cookie favicon *@
    <link rel="stylesheet" href="styles.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="scripts/bakingClasses.js" defer></script>
</head>
<body>
    <div class="container">
        <h1>BAKERS GONNA BAKE</h1>
        <h2>Book Your Chocolate Chip Cookie Class!</h2>
        <form id="bakingClassForm">
            <div class="form-group">
                <label for="hourlyRateDisplay">Hourly Rate:</label>
                <span id="hourlyRateDisplay" class="form-control">$20.00</span>
            </div>
            <div>
                <label for="hours">Enter Number of Hours:</label>
                <input type="number" id="hours" name="Hours" min="1" required>
            </div>
            <div>
                <label for="cookies">Desired Number of Cookies for Your Party:</label>
                <input type="number" id="cookies" name="Cookies" min="1" required>
            </div>
            <div>
                <label for="comments">Comments or Questions:</label>
                <textarea id="comments" name="Comments" rows="4"></textarea>
            </div>
            <div>
                <label for="email">Enter Your Email:</label>
                <input type="email" id="email" name="Email" required>
            </div>
            <button type="button" id="calculateButton">Calculate Cost</button>
        </form>
        <div id="result" style="margin-top: 20px; display: none;">
            <h2>Total Cost: <span id="totalCost"></span></h2>
            <p id="confirmationMessage"></p>
        </div>
    </div>
</body>
</html>
